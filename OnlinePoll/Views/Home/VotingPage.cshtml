@{
    ViewBag.Title = "Online Polling";
}

@section scripts
{
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")

    @Scripts.Render("~/Scripts/jquery.signalR-2.4.1.min.js")
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/polling.js"></script>
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
}

<div style="text-align:center;margin-top:10px">
    <img style="width:100%;height:400px" src="~/Media/marvel_vs_dc_wallpaper_014.jpg" />
</div>

<input id="user" type="hidden" />
<div class="row" style="margin-top:15px">
    <div class="col-md-6" style="text-align:center">
        <img style="width:30%;height:inherit" src="~/Media/marvel.png" id="marvel" />
        <div class="progress" style="margin-top:10px;margin-left:20%;margin-right:20%">
            <div id="marvelVoting" class="progress-bar" style="width:0%">0</div>
        </div>
    </div>
    <div class="col-md-6" style="text-align:center;margin-top:10px">
        <img style="width:30%;height:inherit" src="~/Media/dc.png" id="dcVote" />
        <div class="progress" style="margin-top:10px;margin-left:20%;margin-right:20%">
            <div id="dcVoting" class="progress-bar" style="width:0%">0</div>
        </div>
    </div>

</div>
